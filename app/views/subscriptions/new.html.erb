         <div class="plan-header">Validity: 12 Months </div>
        <div class="plan-footer">
         
            <%= link_to 'Subscribe', new_subscription_path(plan: "rigorous", plan_id: Rails.application.credentials.rigorous), class:"button is-fullwidth" %>
          
        </div>
      </div>
    </div>
  </div>

  


  




