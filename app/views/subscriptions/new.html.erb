    <h2 class="subtitle">Choose the best plan that matches your budget.</h2>
    <div class="pricing-table">

        <div class="pricing-plan is-warning">
        <div class="plan-header">Start </div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">Rs: </span>500</span>/month</div>
         <div class="plan-header">Validity: 3 Months </div>
        
        
        <div class="plan-footer">
          
            <%= link_to 'Subscribe', new_subscription_path(plan: "start", plan_id: Rails.application.credentials.start), class:"button is-fullwidth" %>
         
        </div>
      </div>




      <div class="pricing-plan is-warning">
        <div class="plan-header">Starter </div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">Rs: </span>450</span>/month</div>
         <div class="plan-header">Validity: 6 Months </div>
        <div class="plan-footer">
          
            <%= link_to 'Subscribe', new_subscription_path(plan: "starter", plan_id: Rails.application.credentials.starter), class:"button is-fullwidth" %>
         
        </div>
      </div>

      <div class="pricing-plan is-link is-active">
        <div class="plan-header">Regular </div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">Rs: </span>400</span>/month</div>
        <div class="plan-header">Validity: 9 Months </div>
        <div class="plan-footer">
          
            <%= link_to 'Subscribe', new_subscription_path(plan: "regular", plan_id: Rails.application.credentials.regular), class:"button is-fullwidth" %>
          
        </div>
      </div>
      <div class="pricing-plan is-danger">
        <div class="plan-header">Rigorous </div>
