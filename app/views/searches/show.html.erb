
<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Custom Search Result 
      </h1>
    </div>
   </div>
</section>
<% end %>

 
<div class="product-index-grid pt4">
 
    <% @search.search_products.each do |search| %>
      <div class="product border-light">
        <div class="product-thumb">
          <%= search.name %>
        <%= link_to image_tag(search.image_url(:thumb)), search %>
        </div>
        <div class="pa3">
      <h3 class="fw7 f4 title"><%= link_to search.name, search %></h3>     
      <p class="has-text-gray fg pt1">Brand name: <%= search.brand %></p>
      <p class="has-text-gray fg pt1">Rating: <%= search.rating %></p>
      
      <p class="f3 fw6 has-text-right pt2 price">Rs:<%= search.price %></p>
    </div>
      </div>
      <% end %>
      
</div>

