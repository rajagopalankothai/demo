<div class="content pa3  bg-white border-radius-6">
  <h1 class="title is-4">User Details</h3>
    <table class="table is-narrow">
      <tr>
        <td class="has-text-weight-bold">Name:</td>
        <td><%= current_user.name%></td>
      </tr>
      <tr>
        <td class="has-text-weight-bold">Email:</td>
        <td><%= current_user.email%></td>
      </tr>
    </table>
   


  <div class="content pa3  bg-white border-radius-6">
  <h1 class="title is-4">Order Details<h3>
     <table class="table is-narrow">
  <tr><td>Name:</td><td>Quantity:</td><td>Total price:</td></tr>
  <% @cart.line_items.each_slice(1) do |name| %>
  <% name.each do |item| %>
  <tr><td><%= item.product.name %></td>
  <td><%= item.quantity %></td>
  <td><%= item.total_price %></td>
  </tr>
  <% end %>
  <% end %>
  <tr><td></td><td></td><td>Total :<%= @cart.total_price %></td></tr>

</table>
<%=form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Pay Amount: <%= @cart.total_price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Ecom website Payment"
          data-amount="500"
          data-locale="auto"></script>
<% end %>





    


  

  


  