
<% if user_signed_in? %>
<% if current_user.approved? %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

      <h2 class="title is-2">Edit <%= user %></h2>
      <%= simple_form_for(user, as: resource_name, url: registration_path(user), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>


          <div class="field">
            <div class="control">
              <%= f.check_box :approved %>
            </div>
          </div>


        
        <%= f.button :submit, "Update" , class:"button is-warning" %>

      <% end %>

        


      </div>
     

      </div>
    </div>
  
</section> <% end %> <% end %>


<table>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %>
        <td><%= user.approved %>
        <td>Approve :

          <%= f.check_box :to,user.approved %>
      </tr>
    <% end %>
    </table>